<form action="/get/santa" method="post">
<div class="row">
    <div class="input-field col s6">
        <input id="idNumber" name="idNumber" type="number" class="validate" required>
        <label class="active" for="idNumber">Santa номер №</label>
        <button type="submit" class="btn btn-info">Отримати Гравця</button>
    </div>
</div>
</form>


{{#each info}}
    <div class="row">
        <div class="col s12 m6">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Ти даруєш гравцю {{name1}} {{name2}}</span>
                    <p>{{orderUser}}</p>
                </div>
            </div>
        </div>
    </div>
{{/each}}




<script>
    $(document).ready(function() {
        M.updateTextFields();
    });
</script>